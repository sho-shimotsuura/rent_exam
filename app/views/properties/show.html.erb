<p id="notice"><%= notice %></p>
<h1>閲覧</h1>
<p>
  <strong>物件名</strong>
  <%= @property.property_name %>
</p>
<p>
  <strong>賃料</strong>
  <p><%= @property.rent %>円</p>
</p>
<p>
  <strong>住所</strong>
  <%= @property.address %>
</p>
<p>
  <strong>築年数</strong>
  <p><%= @property.age %>年</p>
</p>
<p>
  <strong>備考</strong>
  <%= @property.note %>
</p>

<% @nearest_stations.each do |nearest_station| %>
  <%# チェリー本コラム参考 %>
    <% @n ||= 0 %>
    <h2>最寄り駅<%= @n += 1 %></h2>
  <% if @property.nearest_stations.any? %>
    <p>
    <strong>路線名:</strong>
    <%= nearest_station.line_name %>
    </p>

    <p>
    <strong>駅名:</strong>
    <%= nearest_station.station_name %>
    </p>

    <p>
    <strong>徒歩分数:</strong>
    <%= nearest_station.time %>
    </p>
  <% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
